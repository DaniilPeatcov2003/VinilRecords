@{
    ViewBag.Title = "Вход";
}

<h2 class="text-xl font-bold mb-4">Вход</h2>

@using (Html.BeginForm("Login", "Account", FormMethod.Post))
{
    @Html.AntiForgeryToken()

    <div class="mb-4">
        <label>Логин:</label>
        <input type="text" name="login" required class="border rounded w-full p-2" />
    </div>
    <div class="mb-4">
        <label>Пароль:</label>
        <input type="password" name="password" required class="border rounded w-full p-2" />
    </div>
    <button type="submit" class="bg-green-500 text-white px-4 py-2 rounded">Войти</button>
}

@if (ViewBag.Message != null)
{
    <p class="text-green-600 mt-2">@ViewBag.Message</p>
}
@if (ViewBag.Error != null)
{
    <p class="text-red-600 mt-2">@ViewBag.Error</p>
}
@if (TempData["SuccessMessage"] != null)
{
    <p class="text-green-600 mt-2">@TempData["SuccessMessage"]</p>
}
