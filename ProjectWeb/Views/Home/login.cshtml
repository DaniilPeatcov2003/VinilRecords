@{
    ViewBag.Title = "Вход";
}

<h2 class="text-xl font-bold mb-4">Вход</h2>

@using (Html.BeginForm("Login", "Home", FormMethod.Post))
{
    <div class="mb-4">
        <label>Email:</label>
        @Html.TextBox("email", null, new { @class = "border rounded w-full p-2" })
    </div>
    <div class="mb-4">
        <label>Пароль:</label>
        @Html.Password("password", null, new { @class = "border rounded w-full p-2" })
    </div>
    <button type="submit" class="bg-green-500 text-white px-4 py-2 rounded">Войти</button>
}

@if (ViewBag.Message != null)
{
    <p class="text-red-500 mt-2">@ViewBag.Message</p>
}
