@{
    ViewBag.Title = "Вход";
}

<div class="min-h-screen flex items-center justify-center bg-gradient-to-br from-green-100 to-blue-200 py-10">
    <div class="bg-white shadow-2xl rounded-2xl p-10 w-full max-w-md border border-gray-200">
        <h2 class="text-2xl font-extrabold text-center text-gray-800 mb-6">Добро пожаловать</h2>

        @using (Html.BeginForm("Login", "Account", FormMethod.Post))
        {
            @Html.AntiForgeryToken()

            <div class="mb-5">
                <label class="block text-gray-700 font-medium mb-1">Логин:</label>
                <input type="text" name="login" required
                       class="w-full px-4 py-2 border border-gray-300 rounded-lg shadow-sm focus:outline-none focus:ring-2 focus:ring-green-400"
                       value="@(ViewBag.LoginFailed == true ? "" : Request.Form["login"])" />
            </div>

            <div class="mb-6">
                <label class="block text-gray-700 font-medium mb-1">Пароль:</label>
                <input type="password" name="password" required
                       class="w-full px-4 py-2 border border-gray-300 rounded-lg shadow-sm focus:outline-none focus:ring-2 focus:ring-green-400" />
            </div>

            <button type="submit"
                    class="w-full py-2 bg-gradient-to-r from-green-500 to-blue-500 text-white font-semibold rounded-lg shadow-md hover:from-green-600 hover:to-blue-600 transition duration-300">
                Войти
            </button>
        }

        @if (ViewBag.Message != null)
        {
            <p class="text-green-600 text-center mt-4">@ViewBag.Message</p>
        }
        @if (ViewBag.Error != null)
        {
            <p class="text-red-600 text-center mt-4">@ViewBag.Error</p>
        }
        @if (TempData["SuccessMessage"] != null)
        {
            <p class="text-green-600 text-center mt-4">@TempData["SuccessMessage"]</p>
        }
    </div>
</div>
