@model ProjectWeb.Models.RegisterViewModel

@{
    ViewBag.Title = "Регистрация";
}

<div class="min-h-screen flex items-center justify-center bg-gradient-to-br from-blue-100 to-purple-200 py-10">
    <div class="bg-white shadow-2xl rounded-2xl p-10 w-full max-w-md border border-gray-200">
        <h2 class="text-2xl font-extrabold text-center text-gray-800 mb-6">Создать аккаунт</h2>

        @using (Html.BeginForm("Register", "Account", FormMethod.Post))
        {
            @Html.AntiForgeryToken()

            <div class="mb-5">
                @Html.LabelFor(m => m.Name, new { @class = "block text-gray-700 font-medium mb-1" })
                @Html.TextBoxFor(m => m.Name, new { @class = "w-full px-4 py-2 border border-gray-300 rounded-lg shadow-sm focus:outline-none focus:ring-2 focus:ring-purple-400" })
                @Html.ValidationMessageFor(m => m.Name, "", new { @class = "text-red-500 text-sm mt-1" })
            </div>

            <div class="mb-5">
                @Html.LabelFor(m => m.Email, new { @class = "block text-gray-700 font-medium mb-1" })
                @Html.TextBoxFor(m => m.Email, new { @class = "w-full px-4 py-2 border border-gray-300 rounded-lg shadow-sm focus:outline-none focus:ring-2 focus:ring-purple-400", type = "email" })
                @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-red-500 text-sm mt-1" })
            </div>

            <div class="mb-6">
                @Html.LabelFor(m => m.Password, new { @class = "block text-gray-700 font-medium mb-1" })
                @Html.PasswordFor(m => m.Password, new { @class = "w-full px-4 py-2 border border-gray-300 rounded-lg shadow-sm focus:outline-none focus:ring-2 focus:ring-purple-400" })
                @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-red-500 text-sm mt-1" })
            </div>

            <button type="submit" class="w-full py-2 bg-gradient-to-r from-purple-500 to-indigo-500 text-white font-semibold rounded-lg shadow-md hover:from-purple-600 hover:to-indigo-600 transition duration-300">
                Зарегистрироваться
            </button>
        }
    </div>
</div>
